<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textlayout_bnotes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/bnotes_title_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_layout_design"
            android:hint="@string/title_string"
            android:inputType="textCapSentences"
            android:padding="15dp"
            android:focusedByDefault="true"
            android:focusable="true"
            tools:targetApi="o" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textlayout_bnotes_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textlayout_bnotes_title"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/bnotes_body_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_layout_design"
            android:hint="@string/body_string"
            android:inputType="textMultiLine|textCapSentences"
            android:lineSpacingMultiplier="1.2"
            android:padding="15dp" />
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>